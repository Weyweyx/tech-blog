<div>
    <header>
        <nav>
            <a href="/">Home</a>
            <a href="/dashboard">Dashboard</a>
            {{#if loggedIn}}
            <a href="/logout">Logout</a>
            {{else}}
            <a href="/login">Login</a>
            {{/if}}
        </nav>
    </header>
    <main>
        <div>
            <h1>
                Posts
            </h1>
            <div>
                {{#each posts}}
                <div>
                    <h3>{{title}}</h3>
                    <h4>Posted By: {{user.username}}</h4>
                    <h4>Posted At: {{updatedAt}}</h4>
                <textarea readonly>{{content}}</textarea>
                {{#each comments}}
                <textarea readonly>{{content}}</textarea>
                {{/each}}
                <div>
                    <form class="postcommentform" id="postcommentform-{{id}}">
                        <textarea name="content" id=""></textarea>
                    <button>Comment</button>
                    </form>
                </div>
                </div>
                {{/each}}
            </div>
        </div>
    </main>
</div>