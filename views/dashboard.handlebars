<div>
     <header>
        <nav>
            <a href="/">Home</a>
            <a href="/dashboard">Dashboard</a>
            {{#if loggedIn}}
            <a href="/logout">Logout</a>
            {{else}}
            <a href="/login">Login</a>
            {{/if}}
        </nav>
    </header>
    <main>
        <button id="newpostbutton">Create New Post</button>
        <div>
            <form id="newpostform">
                <div>
                    <label>Title:</label>
                    <input type="text" name="title">

                </div>
                <div>
                    <label>Content</label>
                    <textarea name="content"/>

                </div>
                <div>
                    <button type="submit">Create</button>
                </div>
            </form>
        </div>
    </main>
</div>